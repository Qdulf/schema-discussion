{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "XARF OPEN SERVICE",
    "description": "A format to report the detection of an open serice.",
    "allOf": [
        {
            "$ref": "xarf_shared.schema.json#/XarfBase"
        },
        {
            "type": "object",
            "properties": {
                "Report": {
                    "allOf": [
                        {
                            "$ref": "xarf_shared.schema.json#/IpBasedReport"
                        },
                        {
                            "type": "object",
                            "properties": {
                                "ReportClass": {
                                    "type": "string",
                                    "enum": ["Content"]
                                },
                                "ReportType": {
                                    "type": "string",
                                    "enum": ["Copyright"]
                                },
                                "ServiceName": {
                                    "type": "string",
                                    "description": "name of the open service"
                                },
                                "SystemDescription": {
                                    "type": "string",
                                    "description": "details on the open system or service"
                                }
                            },
                            "required": [
                                "ReportClass", "ReportType", "ServiceName"
                            ]
                            
                        }
                    ]
                }
            }
        }
    ]
}
