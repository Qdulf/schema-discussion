{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "XARF OPEN MONGODB",
    "description": "A format to report the detection of an open Elasticsearch instance.",
    "allOf": [
        {
            "$ref": "xarf_shared.schema.json#/XarfBase"
        },
        {
            "type": "object",
            "properties": {
                "Report": {
                    "allOf": [
                        {
                            "$ref": "xarf_shared.schema.json#/IpBasedReport"
                        },
                        {
                            "$ref": "openservice.schema.json#/OpenService"                            
                        },
                        {
                            "type": "object",
                            "properties": {
                                "ReportType": {
                                    "type": "string",
                                    "enum": ["OpenElastic"]
                                },
                                "ServiceName": {
                                    "type": "string",
                                    "description": "name of the open service",
                                    "enum": ["Elasticsearch"]
                                },
                                "Version": {
                                    "type": "string",
                                    "description": "Elasticsearch version number"
                                }
                            },
                            "required": [
                                "ReportType", "ServiceName"
                            ]
                            
                        }
                    ]
                }
            }
        }
    ]
}
