{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "XARF OPEN SERVICE",
    "description": "A format to report the detection of an open serice.",
    "OpenService":{
        "type": "object",
        "properties": {
            "ReportClass": {
                "type": "string",
                "enum": ["Content"]
            },
            "ServiceName": {
                "type": "string",
                "description": "name of the open service"
            },
            "Protocol": {
                "type": "string",
                "description": "protocol the service uses to communicate",
                "optional": true,
                "enum": [
                    "tcp",
                    "udp"
                ]
            },
            "Domain": {
                "type": "string",
                "description": "domain of the service",
                "format": "hostname",
                "optional": true
            }
        }
    }
}
